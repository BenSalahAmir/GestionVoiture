<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/nav_item1"
            android:layout_width="278dp"
            android:layout_height="268dp"
            android:layout_marginLeft="50sp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/service2" />

        <Button
            android:id="@+id/button_update_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Service"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Name Service"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Note"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="16dp"
            android:maxWidth="500dp"
            />
        <TextView
            android:id="@+id/text_view_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Amenities"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradientblue"
                android:padding="6dp"
                android:text="Oil change"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradientblue"
                android:padding="6dp"
                android:text="Air filter"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradientblue"
                android:padding="6dp"
                android:text="New battery check"

                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>
        <TextView
            android:id="@+id/text_view_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Price"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            android:textColor="#A8B2C8"
            android:textSize="18dp" />

    </LinearLayout>
</ScrollView>
